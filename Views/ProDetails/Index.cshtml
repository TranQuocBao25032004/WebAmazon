@model IEnumerable<WebAmazon.Models.ProDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách các phiên bản của sản phẩm </h2>


<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Price)*@
            Đơn Giá 
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.RemainQuantity)*@
            Số Lượng Kho 
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SoldQuantity)*@
            Đã bán 
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.ViewQuantity)*@
            Lượt xem 
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Color.ColorName)*@
            Màu 
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Product.ProName)*@
            Tên sản phẩm 
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Supplier.SupName)*@
            Nhà cung cấp 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RemainQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoldQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ViewQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color.ColorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.SupName)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.ProDeID }, new { @class = "btn btn-outline-success" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id = item.ProDeID }, new { @class = "btn btn-outline-primary" }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.ProDeID }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Tạo mới", "Create", null, new {@class = "btn btn-outline-secondary"})
</p>
