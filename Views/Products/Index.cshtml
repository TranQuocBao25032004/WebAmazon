@using (Html.BeginForm("Index", "Products", FormMethod.Get))
{
    <input type="text" name="_name" />
    <input type="submit" value="Search" />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameDecription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Category.NameCate)*@Tên Hãng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProName)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ProImage)*@
                    <img src="@Url.Content(item.ProImage)" width="150" height="150" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameDecription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa đổi", "Edit", new { id = item.ProID }, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ProID }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Xóa ", "Delete", new { id = item.ProID }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }

    </table>
}
