@model WebAmazon.Models.Color

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa màu</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Color</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ColorID)

        <div class="form-group">
            @*@Html.LabelFor(model => model.ColorName, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <h4>Tên màu </h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ColorName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ColorName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.RGB, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <h4>RGB </h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RGB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RGB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-warning" />
                @Html.ActionLink("Danh sách màu ", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
