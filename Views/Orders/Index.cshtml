@model IEnumerable<WebAmazon.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách đơn Hàng</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressDeliverry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CusPassword)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressDeliverry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CusPassword)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.OrderID }, new { @class = "btn btn-outline-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrderID }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>

