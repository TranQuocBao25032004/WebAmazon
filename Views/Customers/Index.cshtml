@model IEnumerable<WebAmazon.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Khách Hàng</h2>


<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.CusPassword)*@
            Mật khẩu
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CusName)*@Tên Khách Hàng
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CusEmail)*@Email
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CusPhone)*@Số Điện Thoại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CusPassword)
             
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CusName)
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CusEmail)
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CusPhone)
            
        </td>

        <td>
            @Html.ActionLink("Sửa đổi", "Edit", new { id=item.CusPhone },new {@class="btn btn-outline-success"}) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.CusPhone }, new {@class="btn btn-outline-primary"}) |
            @*@Html.ActionLink("Xóa bỏ", "Delete", new { id=item.CusPhone }, new {@class="btn btn-outline-danger"})*@
        </td>
    </tr>
}

</table>
