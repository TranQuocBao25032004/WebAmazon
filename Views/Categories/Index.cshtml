@model IEnumerable<WebAmazon.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách</h2>
@using (Html.BeginForm("Index", "Categories", FormMethod.Get))
{
    <input type="text" name="_name" />
    <input type="submit" value="Search" />
    <table class="table">
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.NameCate)*@
                <h4>Tên Loại</h4>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa đổi", "Edit", new { id = item.CatID }, new { @class = "btn btn-outline-success" }) |
                    @*@Html.ActionLink("Chi tiết", "Details", new { id = item.CatID }, new { @class = "btn btn-outline-primary" }) |*@
                    @Html.ActionLink("Xóa bỏ", "Delete", new { id = item.CatID }, new { @class = "btn btn-outline-danger" }) |
                    @Html.ActionLink("Sản phẩm liên quan", "ShowCatList", new { id = item.CatID }, new { @class = "btn btn-outline-secondary" })
                </td>
            </tr>
        }
    </table>
        }

   
    <p>
        @Html.ActionLink("Tạo mới sản phẩm", "Create", null, new { @class = "btn btn-outline-dark" })
    </p>
